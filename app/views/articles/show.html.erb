<% if @article.banner.attached? %>
  <%= cl_image_tag @article.banner.key, width: 200 %>
<% else %>
  <p>No banner yet</p>
<% end %>

<p style="color: green"><%= notice %></p>

<%= render @article %>

<div>
  <%= link_to "Edit this article", edit_article_path(@article) %> |
  <%= link_to "Back to articles", root_path %>

  <%= button_to "Destroy this article", @article, method: :delete %>
</div>
